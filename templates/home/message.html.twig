{% extends 'base.html.twig' %}

{% block title %}Créer un message{% endblock %}

{% block body %}
    <div style="display: flex;justify-content: space-between">
        <a class="a-accueil" href="{{path('app_accueil_liste')}}" style="font-size: 1.75rem">Accueil</a>
        <a class="a-accueil" href="{{path('app_accueil_profile')}}"><i class="icon-user fa-solid fa-user"></i></a>
    </div>
    <div><a style="font-size: 1.5rem;margin-right: 30px;margin-top: 10px; color: darkblue" class="a-accueil" href="{{ path('app_logout') }}">Déconnexion</a></div>
    <div style="text-align: center"><h1>Créer un message</h1></div>
    <div style="text-align: center">
        <form method="post">
            <div style="display: flex;align-items: center;flex-direction: column;">
                <label style="font-size: 1.5rem" for="sujet">Sélectionner un sujet</label>
                <select style="font-size: 20px;margin: 20px;" id="sujet" name="sujet" required>
                    <option value="">choississer un sujet</option>
                    {% for sujet in sujets %}
                    <option value="{{ sujet.id }}">{{ sujet.title }}</option>
                    {% endfor %}
                </select>
            </div>
            <div>
                <textarea name="message" rows="10" cols="60" required></textarea>
            </div>
            <div>
                <button style="font-size: 1.25em">Valider</button>
            </div>

        </form>
    </div>
{% endblock %}